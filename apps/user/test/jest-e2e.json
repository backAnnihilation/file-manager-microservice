{
  "moduleFileExtensions": ["js", "json", "ts"],
  "rootDir": ".",
  "testEnvironment": "node",
  "testRegex": ".*\\posts.e2e-spec\\.ts$",
  "transform": {
    "^.+\\.(t|j)s$": "ts-jest"
  },
  "setupFilesAfterEnv": ["./setupTests.e2e.ts"],
  "moduleNameMapper": {
    "^@app/shared(.*)$": "<rootDir>/../../../libs/shared/src/$1",
    "^@app/utils(.*)$": "<rootDir>/../../../libs/shared/utils/$1",
    "^@user/core/(.*)$": "<rootDir>/../src/core/$1"
  }
}
